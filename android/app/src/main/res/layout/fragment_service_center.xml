<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ServiceCenterFragment"
    android:background="@color/white"
    android:padding="15dp"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:padding="15dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/chat"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/black_color"
                android:textSize="@dimen/BasicTextSize"
                android:textStyle="bold"
                android:text="실시간 채팅상담" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09:00 ~ 19:00" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/ServiceCenter_Fragment_Call"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:src="@drawable/servicecenter"
                android:padding="15dp"
                android:layout_width="100dp"
                android:layout_height="100dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@drawable/black_color"
                android:textSize="@dimen/BasicTextSize"
                android:textStyle="bold"
                android:text="긴급 고객센터" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="평일 09:00 ~ 18:00" />


        </LinearLayout>

    </LinearLayout>




    <LinearLayout
        android:id="@+id/ServiceCenter_Fragment_Guide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/border"
        android:layout_margin="5dp"
        android:padding="5dp">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@drawable/black_color"
            android:textSize="@dimen/BasicTextSize"
            android:text="키위 이용안내" />

        <Button

            style="?android:attr/borderlessButtonStyle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@color/white"
            android:text="&gt;" />



    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/border"
        android:layout_margin="5dp"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@drawable/black_color"
            android:textSize="@dimen/BasicTextSize"
            android:text="FAQ" />

        <Button

            style="?android:attr/borderlessButtonStyle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@color/white"
            android:text="&gt;" />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/ServiceCenter_Fragment_Alliance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/border"
        android:layout_margin="5dp"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@drawable/black_color"
            android:textSize="@dimen/BasicTextSize"
            android:text="제휴 신청" />

        <Button
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@color/white"
            android:text="&gt;" />



    </LinearLayout>

    <LinearLayout
        android:id="@+id/ServiceCenter_Fragment_Term"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/border"
        android:layout_margin="5dp"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@drawable/black_color"
            android:textSize="@dimen/BasicTextSize"
            android:text="이용 약관" />

        <Button

            style="?android:attr/borderlessButtonStyle"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@color/white"
            android:text="&gt;" />



    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1">

    </LinearLayout>



</LinearLayout>