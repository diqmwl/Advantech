<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:background="@color/white"
    android:padding="10dp">

    <TextView
        android:id="@+id/viewpager_PageName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="페이지 이름"
        android:textSize="25dp"
        android:textColor="@drawable/black_color"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        />

    <TextView
        android:id="@+id/viewpager_Explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사용방법 설명"
        android:layout_gravity="center"/>


    <ImageView
        android:id="@+id/viewpager_Image"
        android:layout_width="match_parent"
        android:layout_height="200dp" />

    <TextView
        android:id="@+id/viewpager_caution"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주의사항"
        android:textColor="@drawable/black_color"
        android:textStyle="bold"
        android:layout_gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/viewpager_NextBTN"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginRight="10dp"
            android:background="@drawable/rounded"
            android:text="다음"
            android:textColor="@color/white"
            android:textSize="@dimen/BasicTextSize"
            android:textStyle="bold" />

        <Button
            android:id="@+id/viewpager_CancleBTN"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rounded2"
            android:text="닫기"
            android:textSize="@dimen/BasicTextSize"
            android:textStyle="bold" />


    </LinearLayout>





</LinearLayout>